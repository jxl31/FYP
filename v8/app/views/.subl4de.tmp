<div class="row">
	<div class="topic-list col-md-2">
		<accordion close-others="false">
			<accordion-group data-ng-repeat="topic in topics" is-open="status.open">
				<accordion-heading>
					{{status.open}
					{{ topic.name }}<i class="pull-right glyphicon" ng-class="{'glyphicon-chevron-down': status.open, 'glyphicon-chevron-right': !status.open}"></i>
					}
				</accordion-heading>
				<button type="button" class="btn btn-default topic-list-item" data-ng-repeat="visualisation in topic.visualisations"
				data-ng-click="selectVisualisation(visualisation.value)">
					{{ visualisation.label }}
				</button>
			</accordion-group>
		</accordion>
	</div> <!-- topic-list -->

	<div class="visualisation-panel col-md-10">
		<div class="btn-group" dropdown is-open="status.isopen" style="position: absolute;">
			<button type="button" class="btn btn-primary dropdown-toggle" dropdown-toggle ng-disabled="disabled">
				{{ selectedDiagram.name }} <span class="caret"></span>
			</button>
			<ul id="diagramDropdown" class="dropdown-menu" role="menu">
		    	<li data-ng-repeat="diagram in diagrams">
		    		<a ng-click="toggleDiagram(diagram)" >{{ diagram.name }}</a>
		    	</li>
		    </ul>

		</div>

		<custom-pie data="author.coauthors" ng-if="author.coauthors.length > 0 && selectedDiagram.diagram === 'coauthorpie'"></custom-pie>
		<custom-bar data="author.coauthors" ng-if="author.coauthors.length > 0 && selectedDiagram.diagram === 'coauthorbar'"></custom-bar>	
	</div><!--  visualisation-panel -->
</div>	